<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="jpabook">
        <class>com.youable.bestudy.model.Category</class>
        <class>com.youable.bestudy.model.Delivery</class>
        <class>com.youable.bestudy.model.DeliveryStatus</class>
        <class>com.youable.bestudy.model.items.Item</class>
        <class>com.youable.bestudy.model.items.Album</class>
        <class>com.youable.bestudy.model.items.Book</class>
        <class>com.youable.bestudy.model.items.Movie</class>
        <class>com.youable.bestudy.model.Member</class>
        <class>com.youable.bestudy.model.Order</class>
        <class>com.youable.bestudy.model.OrderItem</class>
        <class>com.youable.bestudy.model.OrderStatus</class>

        <properties>

            <!-- 필수 속성 -->
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/test2"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />

            <property name="javax.persistence.FlushModeType" value="FlushModeType.AUTO"/>

            <!-- 옵션 -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.use_sql_comments" value="true" />
            <property name="hibernate.id.new_generator_mappings" value="true" />

            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>
    </persistence-unit>

</persistence>